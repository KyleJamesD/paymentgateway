datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  address    String
  city       String
  state      String
  zip        String
  orderNumber Int     @unique
  payment    Payment?
}

model Payment {
  id            Int    @id @default(autoincrement())
  cardNumber    String
  expMonth      String
  expYear       String
  cvv           String
  orderId       Int    @unique
  order         Order  @relation(fields: [orderId], references: [id])
}

model AccessLog {
  id            Int      @id @default(autoincrement())
  timestamp     DateTime @default(now()) // When the login attempt occurred
  ipAddress     String?  // Optional IP address from which the attempt was made
  userAgent     String?  // Optional user agent string from the request
  success       Boolean  // Indicates if the login attempt was successful or not
}